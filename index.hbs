{{!< default}}

<header class="regular blogrollpage" 
	{{#if @blog.cover_image}}
	style="background-image: url({{@blog.cover_image}});"
	{{else}}
	style="background-image: url('{{asset "images/cover.jpg"}}');"
	{{/if}}
>
	{{> nav-container}}

	<div class="title-container">
		<h1 class="blogrollpage-title">Latest Blog Posts</h1>
	</div>
</header>

<main>
	{{#foreach posts}}
		{{> excerpt}}
	{{/foreach}}

	{{pagination}}
</main>